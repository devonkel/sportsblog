extends layout

block content
  h1
    | Current Articles
    .spacer
    .container
      .row
        .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
          .post-preview
            - if(articles.length>0)
              each article, i in articles
                a(href='/articles/show/#{article._id}')
                  h2.post-title #{article.title}
                  h3.post-subtitle #{article.subtitle}
                  h3.post-subtitle Category: #{article.category}
                p.post-meta
                  | Posted by #{article.author} on #{moment(article.created_dt).format('DD-MMM-YYYY, h:mm:ss A')}
            - else
              h2 No Articles
          hr
          